<main id="signup-bg">
  <header>
    <div id="header-logo">Read App</div>
  </header>
  <div class="signup-area">
    <div class="signup-area-info">
      <h3>Sign up to App</h3>
      <p>-ユーザー情報を記入してくだい-</p>
    </div>
    
    
    <div class="signup-area-input">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        
        <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="sign-buttons">
          <div class="actions signup-button">
            <%= f.submit "Sign up", class: "signup-link" %>
          </div>
          <div class="actions login-button">
            <%= link_to "Sign in", new_user_session_path, class: "login-link"%>
          </div>
        </div>
        
      <% end %>
      
      <%#= render "devise/shared/links" %>
    </div>
  </div>
</main>

