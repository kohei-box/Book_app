<% @posts.each do | post | %>
<li id="post-<%= post.id %>">
  <span><%= link_to post.user.name, post.user %></span>
  <span>
    <%= post.content %>
    <%= image_tag post.picture.url if post.picture? %>
  </span>
  <span>
    <%= time_ago_in_words(post.created_at) %>　前に作成
    <% if post.user_id === current_user.id %>
      <%= link_to "delete", post, method: :delete, data: { confirm: "本当に削除しますか？"} %>
    <% end %>
  </span>
  </li>
  <% end %>