<p><%= image_tag @google_book.image if @google_book.image? %></p>
<p><%= @google_book.title %></p>
<p><%= @google_book.author %></p>
<p><%= @google_book.description %></p>
<p><%= @google_book.published_at %></p>
<p><%= @google_book.publisher %></p>
<p><%= @google_book.page_count %></p>
<p><%= @google_book.buy_link %></p>
<% if @reviews.any? > 1 %>
  <% @reviews&.each do |review| %>
    <%= review.user.name%>
    <%= review.content %>
  <% end %>
<% else %>
 <p>まだレヴューがありません。</p>
<% end %>






